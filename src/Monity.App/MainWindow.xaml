<Window x:Class="Monity.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monity.App"
        mc:Ignorable="d"
        Title="Monity - App Usage Tracker"
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource CardBrush}" Padding="16,12" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Monity.App;component/Assets/Logo.png" Width="32" Height="32" Margin="0,0,10,0" Stretch="Uniform"/>
                    <TextBlock Text="{DynamicResource App_Name}" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border x:Name="UpdateBanner" Visibility="Collapsed" Background="{DynamicResource UpdateBannerBrush}" CornerRadius="6" Padding="10,6" Margin="0,0,12,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TxtUpdateMessage" Text="{DynamicResource Main_NewVersion}" Foreground="{DynamicResource TextBrush}" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Button x:Name="BtnUpdate" Content="{DynamicResource Main_Update}" Style="{DynamicResource PrimaryButtonStyle}" Padding="10,6" Click="BtnUpdate_Click"/>
                        </StackPanel>
                    </Border>
                    <Button x:Name="BtnBrowserTracking" Content="{DynamicResource Navigation_BrowserTracking}" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,8,0" Click="BtnBrowserTracking_Click"/>
                    <Button x:Name="BtnStatistics" Content="{DynamicResource Main_Statistics}" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,8,0" Click="BtnStatistics_Click"/>
                    <Button x:Name="BtnSettings" Content="{DynamicResource Main_Settings}" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,8,0" Click="BtnSettings_Click"/>
                    <Button x:Name="BtnMinimizeToTray" Content="{DynamicResource Main_HideWindow}" Style="{DynamicResource SecondaryButtonStyle}" Click="BtnMinimizeToTray_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>

        <!-- Footer: version + developer -->
        <Border Grid.Row="2" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="16,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="TxtFooterVersion" FontSize="12" Foreground="{DynamicResource TextMutedBrush}"/>
                <TextBlock Text=" Â· " FontSize="12" Foreground="{DynamicResource TextMutedBrush}"/>
                <TextBlock FontSize="12" Foreground="{DynamicResource TextMutedBrush}">
                    <Run Text="{DynamicResource Main_Developer}"/>
                    <Hyperlink x:Name="LinkFooterDeveloper" RequestNavigate="LinkFooter_RequestNavigate"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
