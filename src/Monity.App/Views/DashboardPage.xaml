<Page x:Class="Monity.App.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard"
      Background="{StaticResource BackgroundBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <TextBlock Text="Dashboard" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"/>
            
            <!-- Summary Cards -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="20" Margin="0,0,8,0" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Bugün Toplam" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtTodayTotal" Text="0 sa 0 dk" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="20" Margin="4,0" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Kullanım kaydı" Foreground="{StaticResource TextMutedBrush}" FontSize="12"
                                   ToolTip="Seçilen günde kaç adet kullanım dilimi kaydedildi (her uygulama değişiminde yeni kayıt oluşur)"/>
                        <TextBlock x:Name="TxtSessionCount" Text="0" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="20" Margin="8,0,0,0" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Şu an aktif" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtCurrentApp" Text="-" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Date selector -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                <TextBlock Text="Tarih:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{StaticResource TextBrush}"/>
                <Border Background="{StaticResource CardBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" VerticalAlignment="Center">
                    <DatePicker x:Name="DatePicker" SelectedDateChanged="DatePicker_SelectedDateChanged" Width="130" MinWidth="130"/>
                </Border>
                <Button x:Name="BtnRefresh" Content="Yenile" Style="{StaticResource PrimaryButtonStyle}" Margin="12,0,0,0" Click="BtnRefresh_Click"/>
            </StackPanel>

            <!-- Hourly chart -->
            <TextBlock Text="Saatlik Kullanım" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
            <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="20,16" Margin="0,0,0,24" BorderBrush="#E2E8F0" BorderThickness="1" Height="240">
                <lvc:CartesianChart x:Name="HourlyChart" DrawMarginFrame="{x:Null}"/>
            </Border>

            <!-- App list -->
            <TextBlock Text="Uygulama Kullanımı" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
            <Border Margin="0,0,0,12" Background="{StaticResource CardBrush}" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="8">
                <Grid>
                    <TextBox x:Name="AppSearchBox" Padding="10,8" FontSize="13" VerticalAlignment="Stretch"
                             BorderThickness="0" Background="Transparent"
                             TextChanged="AppSearchBox_TextChanged"
                             ToolTip="Uygulama adına göre filtrele"/>
                    <TextBlock x:Name="AppSearchPlaceholder" Text="Ara" Padding="10,8" FontSize="13"
                               Foreground="{StaticResource TextMutedBrush}" IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="0" BorderBrush="#E2E8F0" BorderThickness="1">
                <ListView x:Name="AppListView" Height="250" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Uygulama" Width="200" DisplayMemberBinding="{Binding DisplayName}"/>
                            <GridViewColumn Header="Süre" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="100" Padding="8,0">
                                            <TextBlock Text="{Binding DurationFormatted}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Oran" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="80" Padding="8,0">
                                            <TextBlock Text="{Binding PercentageFormatted}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
