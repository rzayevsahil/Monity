<Page x:Class="Monity.App.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:local="clr-namespace:Monity.App.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{DynamicResource Dashboard_Title}"
      Background="{DynamicResource BackgroundBrush}">
    <Page.Resources>
        <local:RankFromAlternationConverter x:Key="RankFromAlternationConverter"/>
    </Page.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <TextBlock Text="{DynamicResource Dashboard_Title}" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8"/>
            <TextBlock x:Name="TxtFirstActivity" Text="{DynamicResource Dashboard_FirstActivity}" FontSize="13" Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,16" ToolTip="{DynamicResource Dashboard_FirstActivityTooltip}"/>

            <!-- Summary Cards -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" Margin="0,0,8,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Dashboard_TodayTotal}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtTodayTotal" Text="0 sa 0 dk" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" Margin="4,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Dashboard_UsageRecords}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12"
                                   ToolTip="{DynamicResource Dashboard_UsageRecordsTooltip}"/>
                        <TextBlock x:Name="TxtSessionCount" Text="0" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" Margin="8,0,0,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Dashboard_CurrentlyActive}" Foreground="{DynamicResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtCurrentApp" Text="-" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Date and category -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                <TextBlock Text="{DynamicResource Dashboard_Date}" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource TextBrush}"/>
                <Border Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" VerticalAlignment="Center">
                    <DatePicker x:Name="DatePicker" SelectedDateChanged="DatePicker_SelectedDateChanged" Width="130" MinWidth="130"/>
                </Border>
                <TextBlock Text="{DynamicResource Dashboard_Category}" VerticalAlignment="Center" Margin="16,0,8,0" Foreground="{DynamicResource TextBrush}"/>
                <ComboBox x:Name="CategoryFilter" Width="130" VerticalAlignment="Center" SelectionChanged="CategoryFilter_SelectionChanged"
                          Foreground="{DynamicResource TextBrush}"/>
                <Button x:Name="BtnRefresh" Content="{DynamicResource Dashboard_Refresh}" Style="{DynamicResource PrimaryButtonStyle}" Margin="12,0,0,0" Click="BtnRefresh_Click"/>
            </StackPanel>

            <!-- Aylık kullanım yoğunluğu (ısı haritası) -->
            <TextBlock x:Name="TxtHeatMapTitle" Text="{DynamicResource Dashboard_HeatMapTitle}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
            <Border Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,24">
                <StackPanel>
                    <!-- Haftanın günleri başlığı -->
                    <UniformGrid Rows="1" Columns="7" Margin="0,0,0,6">
                        <TextBlock Text="{DynamicResource Dashboard_DayMon}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource Dashboard_DayTue}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource Dashboard_DayWed}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource Dashboard_DayThu}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource Dashboard_DayFri}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource Dashboard_DaySat}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource Dashboard_DaySun}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </UniformGrid>
                    <ItemsControl x:Name="HeatMapItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="6" Columns="7"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="3" CornerRadius="4" MinWidth="32" MinHeight="28"
                                        Background="{Binding Fill}" ToolTip="{Binding TooltipText}"
                                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                    <TextBlock Text="{Binding DayLabel}" FontSize="11" Foreground="{Binding DayLabelForeground}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Center">
                        <TextBlock Text="{DynamicResource Dashboard_Less}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <Border Width="14" Height="14" CornerRadius="3" Margin="2" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"/>
                        <Border Width="14" Height="14" CornerRadius="3" Margin="2" Background="{DynamicResource PrimaryBrush}" Opacity="0.25" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"/>
                        <Border Width="14" Height="14" CornerRadius="3" Margin="2" Background="{DynamicResource PrimaryBrush}" Opacity="0.5" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"/>
                        <Border Width="14" Height="14" CornerRadius="3" Margin="2" Background="{DynamicResource PrimaryBrush}" Opacity="0.75" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"/>
                        <Border Width="14" Height="14" CornerRadius="3" Margin="2" Background="{DynamicResource PrimaryBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"/>
                        <TextBlock Text="{DynamicResource Dashboard_More}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center" Margin="6,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Hourly chart -->
            <TextBlock Text="{DynamicResource Dashboard_HourlyUsage}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20,16" Margin="0,0,0,24" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Height="240">
                <lvc:CartesianChart x:Name="HourlyChart" DrawMarginFrame="{x:Null}"/>
            </Border>

            <!-- App list -->
            <TextBlock Text="{DynamicResource Dashboard_AppUsage}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
            <Border Margin="0,0,0,12" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8">
                <Grid>
                    <TextBox x:Name="AppSearchBox" Padding="10,8" FontSize="13" VerticalAlignment="Stretch"
                             Foreground="{DynamicResource TextBrush}" BorderThickness="0" Background="Transparent"
                             TextChanged="AppSearchBox_TextChanged"
                             ToolTip="{DynamicResource Dashboard_SearchTooltip}"/>
                    <TextBlock x:Name="AppSearchPlaceholder" Text="{DynamicResource Dashboard_Search}" Padding="10,8" FontSize="13"
                               Foreground="{DynamicResource TextMutedBrush}" IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <ListView x:Name="AppListView" Height="250" BorderThickness="0" Background="Transparent" AlternationCount="9999" SelectionChanged="AppListView_SelectionChanged">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ListViewItemHoverBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="40">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Content="{DynamicResource Dashboard_Rank}"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="40" Padding="8,0">
                                            <TextBlock Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center"
                                                       Text="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource RankFromAlternationConverter}}"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="200">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Content="{DynamicResource Stats_App}" Tag="DisplayName" Click="AppListColumnHeader_Click" Cursor="Hand"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="200" Padding="8,0">
                                            <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="100">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Content="{DynamicResource Stats_Total}" Tag="TotalSeconds" Click="AppListColumnHeader_Click" Cursor="Hand"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="100" Padding="8,0">
                                            <TextBlock Text="{Binding DurationFormatted}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Content="{DynamicResource Stats_Percent}" Tag="Percentage" Click="AppListColumnHeader_Click" Cursor="Hand"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="80" Padding="8,0">
                                            <TextBlock Text="{Binding PercentageFormatted}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
