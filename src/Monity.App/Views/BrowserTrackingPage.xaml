<Page x:Class="Monity.App.Views.BrowserTrackingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:local="clr-namespace:Monity.App.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{DynamicResource BrowserTracking_Title}"
      Background="{DynamicResource BackgroundBrush}">
    <Page.Resources>
        <local:RankFromAlternationConverter x:Key="RankFromAlternationConverter"/>
    </Page.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- Header with navigation -->
            <Grid Margin="0,0,0,24">
                <TextBlock Text="{DynamicResource BrowserTracking_Title}" 
                          FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                <Button Content="{DynamicResource Settings_Back}" 
                       Style="{DynamicResource SecondaryButtonStyle}"
                       HorizontalAlignment="Right" Click="BtnBack_Click"/>
            </Grid>
            
            <!-- Date and Browser Filter -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,24" VerticalAlignment="Center">
                <TextBlock Text="{DynamicResource Dashboard_Date}" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource TextBrush}"/>
                <Border Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" VerticalAlignment="Center">
                    <DatePicker x:Name="DatePicker" SelectedDateChanged="DatePicker_SelectedDateChanged" Width="130" MinWidth="130"/>
                </Border>
                <TextBlock Text="{DynamicResource BrowserTracking_BrowserLabel}" VerticalAlignment="Center" Margin="16,0,8,0" Foreground="{DynamicResource TextBrush}"/>
                <ComboBox x:Name="BrowserFilter" Width="120" VerticalAlignment="Center" SelectionChanged="BrowserFilter_SelectionChanged"
                          Foreground="{DynamicResource TextBrush}"/>
                <Button x:Name="BtnRefresh" Content="{DynamicResource Dashboard_Refresh}"
                       Style="{DynamicResource PrimaryButtonStyle}" Margin="12,0,0,0" Click="BtnRefresh_Click"/>
            </StackPanel>
            
            <!-- Summary Cards -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Browse Time -->
                <Border Grid.Column="0" Background="{DynamicResource CardBrush}"
                       CornerRadius="8" Padding="20" Margin="0,0,8,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource BrowserTracking_TotalTime}"
                                  FontSize="12" Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBlock x:Name="TxtTotalBrowseTime" Text="0 sa 0 dk"
                                  FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- Unique Domains -->
                <Border Grid.Column="1" Background="{DynamicResource CardBrush}"
                       CornerRadius="8" Padding="20" Margin="4,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource BrowserTracking_UniqueDomains}"
                                  FontSize="12" Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBlock x:Name="TxtUniqueDomains" Text="0"
                                  FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- Page Views -->
                <Border Grid.Column="2" Background="{DynamicResource CardBrush}"
                       CornerRadius="8" Padding="20" Margin="8,0,0,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource BrowserTracking_PageViews}"
                                  FontSize="12" Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBlock x:Name="TxtPageViews" Text="0"
                                  FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Top Domains Chart -->
            <TextBlock Text="{DynamicResource BrowserTracking_TopDomains}"
                      FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                   Padding="20,16" Margin="0,0,0,24" Height="300">
                <lvc:CartesianChart x:Name="TopDomainsChart"/>
            </Border>
            
            <!-- Hourly Browser Usage -->
            <TextBlock Text="{DynamicResource BrowserTracking_HourlyUsage}"
                      FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                   Padding="20,16" Margin="0,0,0,24" Height="240">
                <lvc:CartesianChart x:Name="HourlyBrowserChart"/>
            </Border>
            
            <!-- Domain Usage List -->
            <TextBlock Text="{DynamicResource BrowserTracking_DomainList}"
                      FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
            
            <!-- Search Box -->
            <Border Margin="0,0,0,12" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8">
                <Grid>
                    <TextBox x:Name="DomainSearchBox" Padding="10,8" FontSize="13" VerticalAlignment="Stretch"
                             Foreground="{DynamicResource TextBrush}" BorderThickness="0" Background="Transparent"
                             TextChanged="DomainSearchBox_TextChanged"/>
                    <TextBlock x:Name="DomainSearchPlaceholder" Text="{DynamicResource BrowserTracking_SearchDomains}" Padding="10,8" FontSize="13"
                               Foreground="{DynamicResource TextMutedBrush}" IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Domain List -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,0,24">
                <ListView x:Name="DomainListView" Height="250" BorderThickness="0" Background="Transparent" AlternationCount="9999" SelectionChanged="DomainListView_SelectionChanged">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ListViewItemHoverBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="40">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Content="{DynamicResource Dashboard_Rank}"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="40" Padding="8,0">
                                            <TextBlock Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center"
                                                       Text="{Binding Rank}"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="200">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Content="{DynamicResource BrowserTracking_Domain}" Tag="Domain" Click="DomainListColumnHeader_Click" Cursor="Hand"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="200" Padding="8,0">
                                            <TextBlock Text="{Binding Domain}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="100">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Content="{DynamicResource BrowserTracking_Time}" Tag="TotalSeconds" Click="DomainListColumnHeader_Click" Cursor="Hand"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="100" Padding="8,0">
                                            <TextBlock Text="{Binding FormattedTime}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Content="{DynamicResource BrowserTracking_Visits}" Tag="Visits" Click="DomainListColumnHeader_Click" Cursor="Hand"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="80" Padding="8,0">
                                            <TextBlock Text="{Binding Visits}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80">
                                <GridViewColumn.Header>
                                    <GridViewColumnHeader Content="{DynamicResource Stats_Percent}" Tag="Percentage" Click="DomainListColumnHeader_Click" Cursor="Hand"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="80" Padding="8,0">
                                            <TextBlock Text="{Binding Percentage, StringFormat={}{0:F1}%}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
            
            <!-- Bottom Back Button -->
            <Button Content="{DynamicResource Settings_Back}" 
                   Style="{DynamicResource SecondaryButtonStyle}"
                   HorizontalAlignment="Left" Margin="0,0,0,0" Click="BtnBack_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>