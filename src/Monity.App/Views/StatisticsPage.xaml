<Page x:Class="Monity.App.Views.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="İstatistikler"
      Background="{DynamicResource BackgroundBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="İstatistikler" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                <Button x:Name="BtnBackHeader" Grid.Column="1" Content="Dashboard'a dön" Style="{DynamicResource SecondaryButtonStyle}" Click="BtnBack_Click"/>
            </Grid>

            <!-- Dönem seçici -->
            <TextBlock Text="Dönem:" Foreground="{DynamicResource TextBrush}" FontSize="14" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <RadioButton x:Name="RbDaily" Content="Günlük" GroupName="Period" Margin="0,0,16,0" Foreground="{DynamicResource TextBrush}" Checked="Period_Changed"/>
                <RadioButton x:Name="RbWeekly" Content="Haftalık" GroupName="Period" Margin="0,0,16,0" Foreground="{DynamicResource TextBrush}" Checked="Period_Changed"/>
                <RadioButton x:Name="RbMonthly" Content="Aylık" GroupName="Period" Margin="0,0,16,0" Foreground="{DynamicResource TextBrush}" Checked="Period_Changed"/>
                <RadioButton x:Name="RbYearly" Content="Yıllık" GroupName="Period" Foreground="{DynamicResource TextBrush}" Checked="Period_Changed"/>
            </StackPanel>

            <!-- Tarih seçimi (başlangıç, bitiş, özel aralık) -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                <TextBlock x:Name="TxtDateLabel" Text="Başlangıç:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource TextBrush}"/>
                <Border Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" VerticalAlignment="Center">
                    <DatePicker x:Name="DatePicker" SelectedDateChanged="DatePicker_SelectedDateChanged" Width="130" MinWidth="130"/>
                </Border>
                <TextBlock Text="Bitiş:" VerticalAlignment="Center" Margin="12,0,8,0" Foreground="{DynamicResource TextBrush}"/>
                <Border Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" VerticalAlignment="Center">
                    <DatePicker x:Name="DatePickerEnd" SelectedDateChanged="DatePicker_SelectedDateChanged" Width="130" MinWidth="130"/>
                </Border>
                <Button x:Name="BtnRefresh" Content="Yenile" Style="{DynamicResource PrimaryButtonStyle}" Margin="12,0,0,0" Click="BtnRefresh_Click"/>
                <TextBlock x:Name="TxtDateRange" VerticalAlignment="Center" Margin="16,0,0,0" FontSize="13" Foreground="{DynamicResource TextMutedBrush}"/>
            </StackPanel>

            <!-- Genel özet kartları -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" Margin="0,0,8,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Toplam süre" Foreground="{DynamicResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtTotal" Text="0 sa 0 dk" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" Margin="4,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Günde ortalama" Foreground="{DynamicResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtAverage" Text="0 sa 0 dk" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20" Margin="8,0,0,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Kullanım kaydı" Foreground="{DynamicResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtSessionCount" Text="0" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Zaman dağılımı grafiği (saatlik veya günlük) -->
            <TextBlock x:Name="TxtTimeChartTitle" Text="Saatlik Kullanım" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20,16" Margin="0,0,0,24" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Height="220">
                <lvc:CartesianChart x:Name="TimeDistributionChart" DrawMarginFrame="{x:Null}"/>
            </Border>

            <!-- Uygulama dağılım grafiği (pie) -->
            <TextBlock Text="Uygulama Dağılımı" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="20,16" Margin="0,0,0,24" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Height="220">
                <lvc:PieChart x:Name="AppDistributionChart"/>
            </Border>

            <!-- Uygulama listesi -->
            <TextBlock Text="Uygulama Kullanımı" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
            <Border Margin="0,0,0,12" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8">
                <Grid>
                    <TextBox x:Name="AppSearchBox" Padding="10,8" FontSize="13" VerticalAlignment="Stretch"
                             Foreground="{DynamicResource TextBrush}" BorderThickness="0" Background="Transparent"
                             TextChanged="AppSearchBox_TextChanged"
                             ToolTip="Uygulama adına göre filtrele"/>
                    <TextBlock x:Name="AppSearchPlaceholder" Text="Ara" Padding="10,8" FontSize="13"
                               Foreground="{DynamicResource TextMutedBrush}" IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <ListView x:Name="AppListView" Height="280" BorderThickness="0" Background="Transparent">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ListViewItemHoverBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Uygulama" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="200" Padding="8,0">
                                            <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Toplam" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="100" Padding="8,0">
                                            <TextBlock Text="{Binding TotalFormatted}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Ortalama" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="100" Padding="8,0">
                                            <TextBlock Text="{Binding AverageFormatted}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Yüzde" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="80" Padding="8,0">
                                            <TextBlock Text="{Binding PercentageFormatted}" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!-- Geri -->
            <Button x:Name="BtnBack" Content="Dashboard'a dön" Style="{DynamicResource SecondaryButtonStyle}" HorizontalAlignment="Left" Margin="0,24,0,0" Click="BtnBack_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>
