<Page x:Class="Monity.App.Views.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="İstatistikler"
      Background="{StaticResource BackgroundBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="İstatistikler" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                <Button x:Name="BtnBackHeader" Grid.Column="1" Content="Dashboard'a dön" Style="{StaticResource SecondaryButtonStyle}" Click="BtnBack_Click"/>
            </Grid>

            <!-- Dönem seçici -->
            <TextBlock Text="Dönem:" Foreground="{StaticResource TextBrush}" FontSize="14" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <RadioButton x:Name="RbDaily" Content="Günlük" GroupName="Period" Margin="0,0,16,0" Foreground="{StaticResource TextBrush}" Checked="Period_Changed"/>
                <RadioButton x:Name="RbWeekly" Content="Haftalık" GroupName="Period" Margin="0,0,16,0" Foreground="{StaticResource TextBrush}" Checked="Period_Changed"/>
                <RadioButton x:Name="RbMonthly" Content="Aylık" GroupName="Period" Margin="0,0,16,0" Foreground="{StaticResource TextBrush}" Checked="Period_Changed"/>
                <RadioButton x:Name="RbYearly" Content="Yıllık" GroupName="Period" Foreground="{StaticResource TextBrush}" Checked="Period_Changed"/>
            </StackPanel>

            <!-- Tarih seçimi -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                <TextBlock x:Name="TxtDateLabel" Text="Tarih:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{StaticResource TextBrush}"/>
                <Border Background="{StaticResource CardBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" VerticalAlignment="Center">
                    <DatePicker x:Name="DatePicker" SelectedDateChanged="DatePicker_SelectedDateChanged" Width="130" MinWidth="130"/>
                </Border>
                <Button x:Name="BtnRefresh" Content="Yenile" Style="{StaticResource PrimaryButtonStyle}" Margin="12,0,0,0" Click="BtnRefresh_Click"/>
            </StackPanel>

            <!-- Genel özet kartları -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="20" Margin="0,0,8,0" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Toplam süre" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtTotal" Text="0 sa 0 dk" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="20" Margin="4,0" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Günde ortalama" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtAverage" Text="0 sa 0 dk" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="20" Margin="8,0,0,0" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Kullanım kaydı" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                        <TextBlock x:Name="TxtSessionCount" Text="0" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Uygulama listesi -->
            <TextBlock Text="Uygulama Kullanımı" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
            <Border Margin="0,0,0,12" Background="{StaticResource CardBrush}" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="8">
                <Grid>
                    <TextBox x:Name="AppSearchBox" Padding="10,8" FontSize="13" VerticalAlignment="Stretch"
                             BorderThickness="0" Background="Transparent"
                             TextChanged="AppSearchBox_TextChanged"
                             ToolTip="Uygulama adına göre filtrele"/>
                    <TextBlock x:Name="AppSearchPlaceholder" Text="Ara" Padding="10,8" FontSize="13"
                               Foreground="{StaticResource TextMutedBrush}" IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <Border Background="{StaticResource CardBrush}" CornerRadius="8" Padding="0" BorderBrush="#E2E8F0" BorderThickness="1">
                <ListView x:Name="AppListView" Height="280" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Uygulama" Width="200" DisplayMemberBinding="{Binding DisplayName}"/>
                            <GridViewColumn Header="Toplam" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="100" Padding="8,0">
                                            <TextBlock Text="{Binding TotalFormatted}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Ortalama" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="100" Padding="8,0">
                                            <TextBlock Text="{Binding AverageFormatted}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Yüzde" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Stretch" MinWidth="80" Padding="8,0">
                                            <TextBlock Text="{Binding PercentageFormatted}" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!-- Geri -->
            <Button x:Name="BtnBack" Content="Dashboard'a dön" Style="{StaticResource SecondaryButtonStyle}" HorizontalAlignment="Left" Margin="0,24,0,0" Click="BtnBack_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>
