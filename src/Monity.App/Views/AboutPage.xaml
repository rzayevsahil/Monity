<Page x:Class="Monity.App.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="600"
      Title="{DynamicResource About_Title}"
      Background="{DynamicResource BackgroundBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- Header with Back Button -->
            <Grid Margin="0,0,0,24">
                <TextBlock Text="{DynamicResource About_Title}" 
                          FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                <Button Content="{DynamicResource Settings_Back}" 
                       Style="{DynamicResource SecondaryButtonStyle}"
                       HorizontalAlignment="Right" Click="BtnBack_Click"/>
            </Grid>
            
            <!-- App Identity Section -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" 
                   BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                   Padding="24" Margin="0,0,0,16">
                <StackPanel HorizontalAlignment="Center">
                    <!-- App Logo -->
                    <Image Source="pack://application:,,,/Assets/MonityLogo.png" 
                           Width="120" Height="120" Margin="0,0,0,16"
                           RenderOptions.BitmapScalingMode="HighQuality" 
                           Stretch="Uniform" StretchDirection="DownOnly"/>
                    
                    <!-- App Name -->
                    <TextBlock Text="{DynamicResource App_Name}" 
                              FontSize="28" FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8"/>
                    
                    <!-- App Description -->
                    <TextBlock Text="{DynamicResource About_AppDescription}" 
                              FontSize="14" 
                              HorizontalAlignment="Center" 
                              Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,8"/>
                    
                    <!-- Version Info -->
                    <TextBlock x:Name="TxtVersion" Text="v4.2.0" 
                              FontSize="12" FontWeight="SemiBold"
                              HorizontalAlignment="Center" 
                              Foreground="{DynamicResource PrimaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- App Purpose Section -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" 
                   BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                   Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="{DynamicResource About_Purpose}" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                    <TextBlock Text="{DynamicResource About_PurposeDescription}" 
                              FontSize="13" TextWrapping="Wrap"
                              Foreground="{DynamicResource TextBrush}" LineHeight="20"/>
                </StackPanel>
            </Border>
            
            <!-- Features Section -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" 
                   BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                   Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="{DynamicResource About_Features}" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                    <StackPanel>
                        <TextBlock FontSize="13" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4">
                            <Run Text="• "/>
                            <Run Text="{DynamicResource About_Feature1}"/>
                        </TextBlock>
                        <TextBlock FontSize="13" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4">
                            <Run Text="• "/>
                            <Run Text="{DynamicResource About_Feature2}"/>
                        </TextBlock>
                        <TextBlock FontSize="13" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4">
                            <Run Text="• "/>
                            <Run Text="{DynamicResource About_Feature3}"/>
                        </TextBlock>
                        <TextBlock FontSize="13" Foreground="{DynamicResource TextBrush}">
                            <Run Text="• "/>
                            <Run Text="{DynamicResource About_Feature4}"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Developer Section -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" 
                   BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                   Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="{DynamicResource About_Developer}" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource About_DeveloperName}" 
                                  FontSize="13" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,8,4"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Sahil Rzayev" 
                                  FontSize="13" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource About_Contact}" 
                                  FontSize="13" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,8,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1">
                            <Hyperlink NavigateUri="https://github.com/rzayevsahil" RequestNavigate="Hyperlink_RequestNavigate"
                                      Foreground="{DynamicResource PrimaryBrush}" TextDecorations="None">
                                <TextBlock Text="GitHub: rzayevsahil" FontSize="13"/>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Version History Section -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" 
                   BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                   Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="{DynamicResource About_VersionHistory}" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                    <StackPanel>
                        <TextBlock FontSize="13" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8">
                            <Run Text="v4.2.0" FontWeight="SemiBold"/>
                            <Run Text=" (Mart 2026)" Foreground="{DynamicResource TextMutedBrush}"/>
                            <LineBreak/>
                            <Run Text="    • Opera GX tarayıcı desteği eklendi"/>
                            <LineBreak/>
                            <Run Text="    • Tarayıcı takibi iyileştirmeleri"/>
                            <LineBreak/>
                            <Run Text="    • UI/UX geliştirmeleri"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="13" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8">
                            <Run Text="v4.1.0" FontWeight="SemiBold"/>
                            <Run Text=" (Şubat 2026)" Foreground="{DynamicResource TextMutedBrush}"/>
                            <LineBreak/>
                            <Run Text="    • Performans optimizasyonları"/>
                            <LineBreak/>
                            <Run Text="    • Hata düzeltmeleri"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="13" Foreground="{DynamicResource TextBrush}">
                            <Run Text="v4.0.0" FontWeight="SemiBold"/>
                            <Run Text=" (Ocak 2026)" Foreground="{DynamicResource TextMutedBrush}"/>
                            <LineBreak/>
                            <Run Text="    • Ana versiyon yayınlandı"/>
                            <LineBreak/>
                            <Run Text="    • Tarayıcı takibi özelliği"/>
                            <LineBreak/>
                            <Run Text="    • İstatistik raporları"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Copyright Section -->
            <Border Background="{DynamicResource CardBrush}" CornerRadius="8" 
                   BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                   Padding="20" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="{DynamicResource About_Copyright}" 
                              FontSize="12" HorizontalAlignment="Center"
                              Foreground="{DynamicResource TextMutedBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- Bottom Back Button -->
            <Button Content="{DynamicResource Settings_Back}" 
                   Style="{DynamicResource SecondaryButtonStyle}"
                   HorizontalAlignment="Left" Click="BtnBack_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>